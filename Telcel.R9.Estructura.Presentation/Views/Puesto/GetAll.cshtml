@model Telcel.R9.Estructura.Negocio.Puesto
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-xl-12">
            <h2>Puestos</h2>
            <hr/>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-6">
            <h6 class="text-center">Lista de los puestos disponibles </h6>
        </div>
    </div>
    <br />

    @if(Model.Puestos.Count > 0)
    {
        <div class="row">
            <div class="col-xl-12">
                <table class="table table-bordered table-responsive">
                    <thead>
                        <tr class="text-center">
                            <td class = "form-group" style = "display: none;">IdPuesto</td>
                            <td>Nombre</td>
                        </tr>
                    </thead>
                    <tbody>

                    @foreach (Telcel.R9.Estructura.Negocio.Puesto puesto in Model.Puestos)
                    {
                        <tr class="text-center">                            
                            <td class = "form-group" style = "display: none;">@puesto.IdPuesto</td>
                            <td>@puesto.Nombre</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    }
    else
    {
        <div class="row">
            <div class="col-xl-12">
                <div class="alert alert-danger" role="alert">
                    No se encontraron registros de puestos!!!
                </div>
            </div>
        </div>
    }
   
</div>